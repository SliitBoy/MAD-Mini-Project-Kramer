<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:background="@color/BG">

    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="214dp"
        android:layout_height="30dp"
        android:textColor="@color/cardText"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="285dp"
        android:layout_height="239dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="130dp"
        android:checkedButton="@+id/radio_button_1"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_dashboard2"
        app:layout_constraintVertical_bias="0.060000002"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:textColor="@color/cardText"
            android:id="@+id/radio_button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hey" />

        <RadioButton
            android:id="@+id/radio_button_2"
            android:textColor="@color/cardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wht the hell" />

        <RadioButton
            android:id="@+id/radio_button_3"
            android:textColor="@color/cardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="s" />

        <RadioButton
            android:id="@+id/radio_button_4"
            android:textColor="@color/cardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="arh" />

        <RadioButton
            android:id="@+id/radio_button_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cardText"
            android:text="rheahe" />
    </RadioGroup>

    <Button
        android:id="@+id/containedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/QuizInProgressNextQ"
        app:layout_constraintBottom_toTopOf="@+id/text_dashboard2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_dashboard"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_dashboard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/Question"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/cardText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />
</androidx.constraintlayout.widget.ConstraintLayout>