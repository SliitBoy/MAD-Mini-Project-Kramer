 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
     android:background="@color/BG"
    >
    <!-- A CardView that contains a TextView -->


     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:outlineSpotShadowColor="#251A1A">

         <com.google.android.material.card.MaterialCardView
             android:id="@+id/card_view_material"
             android:layout_width="381dp"
             android:layout_height="88dp"
             android:layout_gravity="center"
             android:layout_marginTop="68dp"

             android:clickable="true"
             card_view:cardBackgroundColor="@color/cardview_dark_background"
             card_view:cardCornerRadius="4dp"
             card_view:layout_constraintEnd_toEndOf="parent"
             card_view:layout_constraintStart_toStartOf="parent"
             card_view:layout_constraintTop_toTopOf="parent">


             <RatingBar
                 android:id="@+id/ratingBar"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="115dp"
                 android:layout_marginTop="50dp"
                 android:numStars="5"
                 android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                 android:outlineSpotShadowColor="#3C3C3C"
                 android:rating="4"
                 android:stepSize=".5" />

             <com.google.android.material.textview.MaterialTextView

                 android:id="@+id/textView3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="15dp"
                 android:layout_marginTop="50dp"
                 android:text="@string/tags"
                 tools:ignore="MissingClass"
                 android:textColor="@color/cardText"/>

             <com.google.android.material.textview.MaterialTextView
                 android:id="@+id/textView2"
                 android:layout_width="164dp"
                 android:layout_height="35dp"
                 android:layout_marginStart="15dp"
                 android:layout_marginTop="15dp"
                 android:text="@string/quizname"
                 android:textFontWeight="70"
                 tools:ignore="MissingClass"
                 android:textSize="20sp"
                 android:textColor="@color/cardText"/>

         </com.google.android.material.card.MaterialCardView>
         <com.google.android.material.card.MaterialCardView
             android:id="@+id/card_view_material2"
             android:layout_width="381dp"
             android:layout_height="88dp"
             android:layout_gravity="center"
             android:layout_marginTop="170dp"

             android:clickable="true"
             card_view:cardBackgroundColor="@color/cardview_dark_background"
             card_view:cardCornerRadius="4dp"
             card_view:layout_constraintEnd_toEndOf="parent"
             card_view:layout_constraintStart_toStartOf="parent"
             card_view:layout_constraintTop_toTopOf="parent">


             <RatingBar
                 android:id="@+id/ratingBar2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="115dp"
                 android:layout_marginTop="50dp"
                 android:numStars="5"
                 android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                 android:outlineSpotShadowColor="#3C3C3C"
                 android:rating="3.5"
                 android:stepSize=".5" />

             <com.google.android.material.textview.MaterialTextView

                 android:id="@+id/textView31"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="15dp"
                 android:layout_marginTop="50dp"
                 android:text="@string/tags"
                 tools:ignore="MissingClass"
                 android:textColor="@color/cardText"/>

             <com.google.android.material.textview.MaterialTextView
                 android:id="@+id/textView21"
                 android:layout_width="164dp"
                 android:layout_height="35dp"
                 android:layout_marginStart="15dp"
                 android:layout_marginTop="15dp"
                 android:text="@string/quizname"
                 android:textFontWeight="70"
                 tools:ignore="MissingClass"
                 android:textSize="20sp"
                 android:textColor="@color/cardText"/>

         </com.google.android.material.card.MaterialCardView>
         <com.google.android.material.card.MaterialCardView
             android:id="@+id/card_view_material3"
             android:layout_width="381dp"
             android:layout_height="88dp"
             android:layout_gravity="center"
             android:layout_marginTop="270dp"

             android:clickable="true"
             card_view:cardBackgroundColor="@color/cardview_dark_background"
             card_view:cardCornerRadius="4dp"
             card_view:layout_constraintEnd_toEndOf="parent"
             card_view:layout_constraintStart_toStartOf="parent"
             card_view:layout_constraintTop_toTopOf="parent">


             <RatingBar
                 android:id="@+id/ratingBar1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="115dp"
                 android:layout_marginTop="50dp"
                 android:numStars="5"
                 android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                 android:outlineSpotShadowColor="#3C3C3C"
                 android:rating="2"
                 android:stepSize=".5" />

             <com.google.android.material.textview.MaterialTextView

                 android:id="@+id/textView32"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="15dp"
                 android:layout_marginTop="50dp"
                 android:text="@string/tags"
                 tools:ignore="MissingClass"
                 android:textColor="@color/cardText"/>

             <com.google.android.material.textview.MaterialTextView
                 android:id="@+id/textView22"
                 android:layout_width="164dp"
                 android:layout_height="35dp"
                 android:layout_marginStart="15dp"
                 android:layout_marginTop="15dp"
                 android:text="@string/quizname"
                 android:textFontWeight="70"
                 tools:ignore="MissingClass"
                 android:textSize="20sp"
                 android:textColor="@color/cardText"/>

         </com.google.android.material.card.MaterialCardView>
     </androidx.constraintlayout.widget.ConstraintLayout>





     <SearchView
         android:layout_width="378dp"
         android:layout_height="33dp"
         android:layout_marginStart="16dp"
         android:layout_marginTop="12dp"
         android:layout_marginEnd="16dp"
         card_view:layout_constraintEnd_toEndOf="parent"
         card_view:layout_constraintStart_toStartOf="parent"
         card_view:layout_constraintTop_toTopOf="parent" />

 </androidx.constraintlayout.widget.ConstraintLayout>
